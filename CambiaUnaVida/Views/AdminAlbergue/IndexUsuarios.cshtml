@model IEnumerable<CambiaUnaVida.Models.ApplicationUser>

@{
    ViewBag.Title = "Usuarios/Rol: " + ViewBag.Rol;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuarios/Rol: @ViewBag.Rol</h2>

<p>
    @Html.ActionLink("Agregar un nuevo usuario", "Create")
</p>
<table class="table">
    <tr>        
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>        
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidos)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>        
        <td>            
            @Html.ActionLink("Detalles", "Details", new { id=item.Id })            
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Regresar a la página principal", "Index")
</div>
